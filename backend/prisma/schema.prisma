// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum for user roles
enum Role {
  GUEST
  USER
  ADMIN
}

// Enum for book status
enum BookStatus {
  AVAILABLE
  BORROWED
  UNAVAILABLE
}

// User model
model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String
  firstName    String   @map("first_name")
  lastName     String   @map("last_name")
  role         Role     @default(USER)
  avatar       String?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  savedBooks   SavedBook[]
  downloads    Download[]
  
  @@map("users")
}

// Category model for books
model Category {
  id          String   @id @default(uuid())
  name        String   @unique
  nameUk      String?  @map("name_uk") // Ukrainian translation
  description String?
  slug        String   @unique
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  books       BookCategory[]

  @@map("categories")
}

// Author model
model Author {
  id          String   @id @default(uuid())
  name        String
  biography   String?
  birthYear   Int?     @map("birth_year")
  deathYear   Int?     @map("death_year")
  photoUrl    String?  @map("photo_url")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  books       BookAuthor[]

  @@map("authors")
}

// Book model
model Book {
  id              String     @id @default(uuid())
  title           String
  description     String?
  isbn            String?    @unique
  publishYear     Int?       @map("publish_year")
  publisher       String?
  language        String     @default("uk")
  pageCount       Int?       @map("page_count")
  coverUrl        String?    @map("cover_url")
  fileUrl         String?    @map("file_url")
  fileFormat      String?    @map("file_format") // PDF, EPUB, etc.
  status          BookStatus @default(AVAILABLE)
  openLibraryId   String?    @unique @map("open_library_id") // ID from Open Library API
  rating          Float      @default(0)
  ratingCount     Int        @default(0) @map("rating_count")
  downloadCount   Int        @default(0) @map("download_count")
  createdAt       DateTime   @default(now()) @map("created_at")
  updatedAt       DateTime   @updatedAt @map("updated_at")

  // Relations
  authors         BookAuthor[]
  categories      BookCategory[]
  savedBy         SavedBook[]
  downloads       Download[]

  @@index([title])
  @@index([publishYear])
  @@map("books")
}

// Many-to-many relation between Book and Author
model BookAuthor {
  id       String @id @default(uuid())
  bookId   String @map("book_id")
  authorId String @map("author_id")

  book     Book   @relation(fields: [bookId], references: [id], onDelete: Cascade)
  author   Author @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@unique([bookId, authorId])
  @@map("book_authors")
}

// Many-to-many relation between Book and Category
model BookCategory {
  id         String @id @default(uuid())
  bookId     String @map("book_id")
  categoryId String @map("category_id")

  book       Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([bookId, categoryId])
  @@map("book_categories")
}

// Saved books (user's personal library)
model SavedBook {
  id            String   @id @default(uuid())
  userId        String   @map("user_id")
  bookId        String?  @map("book_id") // Nullable for Open Library books
  openLibraryId String?  @map("open_library_id") // For Open Library books
  source        String   @default("local") // "local" or "openlibrary"
  savedAt       DateTime @default(now()) @map("saved_at")

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book          Book?    @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId, source], name: "unique_local_book")
  @@unique([userId, openLibraryId, source], name: "unique_openlibrary_book")
  @@index([userId, source])
  @@map("saved_books")
}

// Download history
model Download {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  bookId       String   @map("book_id")
  downloadedAt DateTime @default(now()) @map("downloaded_at")

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book         Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@map("downloads")
}
